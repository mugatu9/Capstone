@model CSD480Group3Capstone001.Models.Building

<div>
    @{
        //TODO: this was just the fastest way to display some of the information that is availble from our building model at this point. this should be cleaned up and possibly more data displayed
    } 
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BuildingID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BuildingID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrgName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrgName)
        </dd>
        <dt class="col-sm-2">
            Tax Parcel
        </dt>
        <dd class="col-sm-10">
            Amount: @Model.TaxParcelAmount Year: @Model.TaxParcelYear
        </dd>

        @{
            <dt class="col-sm-2">
                Tenants
            </dt>
            <dd class="col-sm-10">
                <ol>
                    @foreach (Unit u in Model.Units)
                    {
                        
                        foreach (var tu in u.TenantUnits)
                        {
                            <li>@tu.tenant.FirstName @tu.tenant.LastName</li>
                        }
                    }
                </ol>
            </dd>
            <dt class="col-sm-2">
                Vehicles
            </dt>
            <dd class="col-sm-10">
                <ol>
                  
                    @foreach (Unit u in Model.Units)
                    {

                        foreach (TenantUnit tu in u.TenantUnits)
                        {

                            foreach (Vehicle v in tu.tenant.Vehicles)
                            {
                               
                                <li>@v.Make @v.Model plate number: @v.LicensePlate</li>
                                
                            }
                        }
                    }
                </ol>
            </dd>
        }

    </dl>
</div>

